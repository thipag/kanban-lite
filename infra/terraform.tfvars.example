ssh_host             = "your.server.ip"
ssh_user             = "ubuntu"
ssh_port             = 22
ssh_password         = "changeme"
# leave empty to reuse ssh_password for sudo operations
sudo_password        = ""

project_dir          = "/opt/kanban-lite"
backend_image        = "registry.example.com/kanban-lite-api:2024-05-24.1"
database_url         = "postgresql+psycopg://user:password@localhost:5432/kanban"
frontend_origin      = "https://kanban-lite.example.com"

api_port             = 8000
postgres_network_name = ""
registry_port        = 5000
registry_data_dir    = "/var/lib/registry"

app_server_name      = "kanban-lite.example.com"
app_server_alias     = ""

registry_server_name = "registry.example.com"
registry_basic_auth_user = "registry"
registry_basic_auth_password = "change-me"
registry_basic_auth_password_hash = "$apr1$example$hashedpassword"

api_subpath          = "/api"
static_root          = "/var/www/kanban-lite"
frontend_dist_dir    = null

apache_sites_available_dir = "/etc/apache2/sites-available"
apache_htpasswd_dir        = "/etc/apache2/htpasswd"
apache_log_dir             = "/var/log/apache2"
apache_user                = "www-data"
apache_group               = "www-data"

ssl_certificate_file      = "/etc/ssl/cloudflare/example.com.pem"
ssl_certificate_key_file  = "/etc/ssl/cloudflare/example.com.key"
ssl_certificate_chain_file = ""
